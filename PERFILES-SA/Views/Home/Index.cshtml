@{
    ViewData["Title"] = "Página de Inicio";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar p-4">
            <div class="position-sticky">
                <h5 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-3 text-muted">
                    <span>Navegación</span>
                </h5>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Department" asp-action="Index">
                            <i class="bi bi-building"></i>
                            Departamentos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Employee" asp-action="Index">
                            <i class="bi bi-people"></i>
                            Empleados
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="About">
                            <i class="bi bi-info-circle"></i>
                            Sobre este proyecto
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="display-4">Bienvenido al Sistema</h1>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Gestión de Departamentos</h5>
                            <p class="card-text">Administre los departamentos de su organización de manera eficiente.</p>
                            <a asp-controller="Department" asp-action="Index" class="btn btn-primary">Ir a Departamentos</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Gestión de Empleados</h5>
                            <p class="card-text">Administre la información de sus empleados de forma centralizada.</p>
                            <a asp-controller="Employee" asp-action="Index" class="btn btn-primary">Ir a Empleados</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/css/site-custom.css">
}
