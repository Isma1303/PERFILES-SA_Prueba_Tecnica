@{
    ViewData["Title"] = "Sobre el Proyecto";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">@ViewData["Title"]</h1>
                    
                    <div class="mb-4">
                        <h5 class="text-primary">Desarrollador</h5>
                        <p class="lead">Mi nombre es Ismael Liquez, y este es mi proyecto de prueba técnica.</p>
                    </div>

                    <div class="mb-4">
                        <h5 class="text-primary">Sobre el Sistema</h5>
                        <p>Este sistema de gestión permite administrar eficientemente:</p>
                        <ul class="list-group list-group-flush mb-3">
                            <li class="list-group-item">
                                <i class="bi bi-building text-primary me-2"></i>
                                Departamentos de la organización
                            </li>
                            <li class="list-group-item">
                                <i class="bi bi-people text-primary me-2"></i>
                                Información de empleados
                            </li>
                        </ul>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                            <i class="bi bi-house-door"></i> Volver al Inicio
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/lib/css/site-custom.css">
}

